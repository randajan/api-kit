{
  "name": "@randajan/api-kit",
  "version": "1.0.9",
  "description": "A lightweight wrapper around fetch that always returns a structured JSON response, handling errors and network issues gracefully",
  "repository": "randajan/api-kit",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./server": {
      "import": "./dist/esm/server/index.js",
      "require": "./dist/cjs/server/index.js"
    },
    "./client": {
      "import": "./dist/esm/client/index.js",
      "require": "./dist/cjs/client/index.js"
    }
  },
  "license": "MIT",
  "peerDependencies": {},
  "devDependencies": {
    "@randajan/simple-lib": "^3.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "fetch",
    "json",
    "http",
    "api",
    "network",
    "request",
    "rest",
    "ajax",
    "wrapper",
    "error-handling"
  ],
  "homepage": "https://github.com/randajan/api-kit",
  "bugs": {
    "url": "https://github.com/randajan/api-kit/issues"
  },
  "author": {
    "name": "Jan Randa",
    "email": "jnranda@gmail.com",
    "url": "https://www.linkedin.com/in/randajan/"
  },
  "dependencies": {
    "@randajan/props": "^0.1.3"
  }
}
